


<GridSpriteSheet name="Marine-Gauss" texture="Data/SpriteSheets/marine-gauss.png" layout="8,1" edgePadding="0,0" innerPadding="0,0">
  
  <!-- Walk Anims -->
  <SpriteAnimationGroup name="walk">
    <SpriteAnimation name="eastWalk" dir="1,0" frames="0-2" type="pingpong" secondsPerFrame="0.25"></SpriteAnimation>
    <SpriteAnimation name="westWalk" dir="-1,0" frames="3-5" type="pingpong" secondsPerFrame="0.25"></SpriteAnimation>
  </SpriteAnimationGroup>
  
  <!-- Idle Anims -->
  <SpriteAnimationGroup name="idle">
    <SpriteAnimation name="eastIdle" dir="1,0" frames="0" type="singleframe" secondsPerFrame="0.5"></SpriteAnimation>
    <SpriteAnimation name="westIdle" dir="-1,0" frames="3" type="singleframe" secondsPerFrame="0.5"></SpriteAnimation>
  </SpriteAnimationGroup>

  <!-- Death Anim -->
  <SpriteAnimation name="death" frames="5-7" type="once" secondsPerFrame="0.33"></SpriteAnimation>
  
</GridSpriteSheet>
