


<GridSpriteSheet name="Soldier" texture="Data/SpriteSheets/Soldier.png" layout="3,4" edgePadding="0,0" innerPadding="0,0">
  
  <!-- Walk Anims -->
  <SpriteAnimationGroup name="walk">
    <SpriteAnimation name="eastWalk"  dir="1,0"  frames="3-5" type="pingpong" secondsPerFrame="0.25"></SpriteAnimation>
    <SpriteAnimation name="northwalk" dir="0,1"  frames="0-2" type="pingpong" secondsPerFrame="0.25"></SpriteAnimation>
    <SpriteAnimation name="southWalk" dir="0,-1" frames="9-11" type="pingpong" secondsPerFrame="0.25"></SpriteAnimation>
    <SpriteAnimation name="westWalk"  dir="-1,0" frames="6-8" type="pingpong" secondsPerFrame="0.25"></SpriteAnimation>
  </SpriteAnimationGroup>
  
  <!-- Idle Anims -->
  <SpriteAnimationGroup name="idle">
    <SpriteAnimation name="eastIdle"  dir="1,0"  frames="4" type="SingleFrame"></SpriteAnimation>
    <SpriteAnimation name="northIdle" dir="0,1"  frames="1" type="SingleFrame"></SpriteAnimation>
    <SpriteAnimation name="southIdle" dir="0,-1" frames="10" type="SingleFrame"></SpriteAnimation>
    <SpriteAnimation name="westIdle"  dir="-1,0" frames="7" type="SingleFrame"></SpriteAnimation>
  </SpriteAnimationGroup>
  
</GridSpriteSheet>
